<h1>All Donors</h1>

<% if @donors.present? %>
  <table class="table">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Gender</th>
        <th>Birth Date</th>
        <th>Phone Number</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @donors.each do |donor| %>
        <tr>
          <td><%= donor.first_name %></td>
          <td><%= donor.last_name %></td>
          <td><%= donor.gender %></td>
          <td><%= donor.birth_date %></td>
          <td><%= donor.phone_number %></td>
          <td>
            <%= link_to 'View Form', donor_path(donor), class: 'btn btn-info' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No donors available.</p>
<% end %>
