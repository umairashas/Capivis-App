<h1>Question Details</h1>

<div class="card">
  <div class="card-body">
    <h4 class="card-title">Question Text</h4>
    <p class="card-text"><%= @question.text %></p>

    <h5 class="card-title">Answer Type</h5>
    <p class="card-text"><%= @question.answer_type %></p>
  </div>
</div>

<div class="mt-3">
  <%= link_to 'Edit Question', edit_question_path(@question), class: 'btn btn-primary' %>
  <%= link_to 'Back to Questions', questions_path, class: 'btn btn-secondary' %>
</div>
