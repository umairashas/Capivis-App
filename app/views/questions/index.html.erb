<!-- app/views/questions/index.html.erb -->
<h1>All Questions</h1>

<% if can? :create, Question %>
  <%= link_to 'New Question', new_question_path, class: 'btn btn-primary' %>
<% end %>
<%= link_to 'View All Donors', all_donors_questions_path, class: 'btn btn-info mt-3' %>


<table class="table">
  <thead>
    <tr>
      <th>Text</th>
      <th>Answer Type</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.text %></td>
        <td><%= question.answer_type %></td>
        <td>
          <% if can? :update, question %>
            <%= link_to 'Edit', edit_question_path(question), class: 'btn btn-warning' %>
          <% end %>

          <% if can? :destroy, question %>
            <%= button_to 'Delete', question_path(question), method: :delete,  data: { turbo_confirm: "Are you sure?" }, class: 'btn btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>